type Query{
    userWallets : [Wallet],
    walletById(id: String) : Wallet
}

type Mutation{
    addWallet(wallet: WalletDTO): Wallet
}

input WalletDTO{
        balance: Float,
        currencyCode: String
}

type Wallet{
    id: ID,
    userId: String,
    balance: Float,
    createdAt: Int,
    currency: Currency
    walletTransactions: [WalletTransaction]
}

type Currency{
    code: ID,
    name: String,
    symbol: String,
    salePrice: Float,
    purchasePrice: Float
}

type WalletTransaction{
    id: ID,
    timestamp: Float,
    wallet: Wallet,
    amount: Float,
    type: String
}